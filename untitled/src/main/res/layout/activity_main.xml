<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.command.myapplication.app.MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点我啊笨蛋～"
            android:id="@+id/showAlert"
            android:layout_marginBottom="25dp" android:layout_above="@+id/startOver"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/textView"
            android:layout_marginTop="38dp" android:layout_below="@+id/textView4" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/seekBar" android:layout_alignRight="@+id/showInfo"
            android:layout_alignEnd="@+id/showInfo"/>
    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_alignTop="@+id/textView"
            android:max="99"
            android:progress="49" android:layout_toLeftOf="@+id/textView2" android:indeterminate="false"
            android:layout_toRightOf="@+id/textView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新计算"
            android:id="@+id/startOver"
            android:layout_marginBottom="27dp"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总分："
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/startOver" android:layout_toLeftOf="@+id/scoretext"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4999"
            android:id="@+id/scoretext"
            android:layout_alignTop="@+id/textView3" android:layout_alignLeft="@+id/showAlert"
            android:layout_alignStart="@+id/showAlert"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回合数："
            android:id="@+id/textView5" android:layout_alignTop="@+id/scoretext" android:layout_alignRight="@+id/showAlert"
            android:layout_alignEnd="@+id/showAlert"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="499"
            android:id="@+id/roundtext" android:layout_alignTop="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:id="@+id/showInfo"
            android:layout_alignBottom="@+id/roundtext" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的目标数值："
            android:id="@+id/textView4"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/targettext"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/targettext"
            android:layout_alignTop="@+id/textView4" android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"/>

</RelativeLayout>
